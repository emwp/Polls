{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "incremental": true,
    "declaration": true,
    "target": "es2016",
    "lib": ["es2016", "esnext.asynciterable"],
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "./dist",
    
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false
  },
  "exclude":  [ "node_modules", "public", "dist"]
}